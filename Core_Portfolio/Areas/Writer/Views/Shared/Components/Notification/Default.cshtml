@using EntityLayer.Concrete
@model List<Announcement>

@{
    string color = "";
}
<div class="dropdown-menu dropdown-menu-end navbar-dropdown preview-list" aria-labelledby="notificationDropdown">
    <p class="mb-0 font-weight-normal float-left dropdown-header">Bildirimler</p>

    @foreach(var item in Model){
        if (item.Status == "Eğitim Duyurusu") color = "preview-icon bg-danger";
        if (item.Status == "Kariyer Fırsatları") color = "preview-icon bg-success";
        if (item.Status == "Araç ve Kütüphane") color = "preview-icon bg-info";
        if (item.Status == "Güvenlik Duyurusu") color = "preview-icon bg-warning";
        if (item.Status == "Framework Tanıtımı") color = "preview-icon bg-dark";
        if (item.Status == "Kamp Duyurusu") color = "preview-icon bg-warning";
        
    <a class="dropdown-item preview-item" href="/Writer/Default/AnnouncementDetails/@item.ID">
        <div class="preview-thumbnail">
            <div class="@color">
                <i class="ti-info-alt mx-0"></i> <!-- İkon düzeltildi -->
            </div>
        </div>
        <div class="preview-item-content">
            <h6 class="preview-subject font-weight-normal">@item.Title</h6>
            <p class="font-weight-light small-text mb-0 text-muted">
              @item.Status
            </p>
        </div>
    </a>
    }
   

    
</div>
