@using EntityLayer.Concrete
@model List<Announcement>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
@{
    string color = "";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyurular 🔔</h4>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <th>Konu</th>
                      
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model){
                            if (item.Status == "Eğitim Duyurusu") color = "badge badge-danger";
                            if (item.Status == "Kariyer Fırsatları") color = "badge badge-success";
                            if (item.Status == "Araç ve Kütüphane") color = "badge badge-info";
                            if (item.Status == "Güvenlik Duyurusu") color = "badge badge-warning";
                            if (item.Status == "Framework Tanıtımı") color = "badge badge-dark";
                            if (item.Status == "Kamp Duyurusu") color = "badge badge-secondary";
                            <tr>
                            <td>@item.ID</td>
                            <td>@item.Title</td>
                            <td>@(((DateTime)item.Date).ToString("dd-MMM-yyyy"))</td>
                            <td><label class="@color">@item.Status</label></td>
                        </tr>
                        }
                     
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

