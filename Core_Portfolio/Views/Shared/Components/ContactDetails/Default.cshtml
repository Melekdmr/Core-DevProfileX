@using EntityLayer.Concrete
@model List<Contact>
<script src="https://cdnjs.cloudflare.com/ajax/libs/lottie-web/5.7.10/lottie.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/lottie-web/5.9.6/lottie.min.js"></script>

<div class="col-md-6" data-aos="fade-left" data-aos-delay="300">
@foreach (var item in Model)
{
   

    <div class="mt-3 px-1">
        <div class="h5">@item.Title</div>
        <p>@item.Description </p>
            <p>Ayrıca, e-posta veya LinkedIn üzerinden de ulaşabilirsiniz.</p>
        <p>Görüşmek üzere!</p>
    </div>
    <div class="mt-53 px-1">
        <div class="row">
            <div class="col-sm-2">
                <div class="pb-1">Email:</div>
            </div>
            <div class="col-sm-10">
                <div class="pb-1 fw-bolder">@item.Mail</div>
            </div>
            
        
            <div class="col-sm-2">
                <div class="pb-1">LinkedIn:</div>
            </div>
            <div class="col-sm-10">
                <div class="pb-1 fw-bolder">@item.Phone</div>
            </div>
        </div>
    </div>
    }
    <div class="col-lg-6">
        <div id="animation-containerlet"></div>

        <script>
                     document.addEventListener("DOMContentLoaded", function () {
                var animation = lottie.loadAnimation({
                    container: document.getElementById('animation-containerlet'),
                    renderer: 'svg',
                    loop: true,
                    autoplay: true,
                    path: '/Template/yellowletter.json'
                });
            });

        </script>

        <style>
            #animation-containerlet {
                position: fixed;
                bottom: 70px;
                right: -200px;
                width: 150px;
                height: 150px;
                z-index: 9999;
             
            }

        </style>

</div>
</div>
