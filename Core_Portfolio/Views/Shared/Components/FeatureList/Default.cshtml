@using EntityLayer.Concrete
@model List<Feature>

<script src="https://cdnjs.cloudflare.com/ajax/libs/lottie-web/5.7.10/lottie.min.js"></script>


<header>
       <div class="cover bg-light">
    <div class="container px-3">
        <div class="row align-items-center">
                
            <!-- Sol Tarafta Animasyon -->
            <div class="col-lg-6">
                <div id="animation-container" style="width: 100%; height: 470px;"></div>
            </div>
                <div class="col-lg-6"> 
                    @foreach(var item in Model){

                    <div class="mt-5">
                        <p class="lead text-uppercase mb-1">@item.Header</p>
                        <h1 class="intro-title marker" data-aos="fade-left" data-aos-delay="50">@item.Name</h1>
                        <p class="lead fw-normal mt-3" data-aos="fade-up" data-aos-delay="100">@item.Title</p>

                   @await Component.InvokeAsync("SocialMediaList")
                        <div class="mt-3" data-aos="fade-up" data-aos-delay="200">
                            <a class="btn btn-primary shadow-sm mt-1 hover-effect" href="#contact">Bana Ulaşın <i class="fas fa-arrow-right"></i></a></div>
                    </div>

                    }
                </div>
            </div>
        </div>
    </div>
    <div class="wave-bg"></div>
</header>

<script>
    var animation = lottie.loadAnimation({
        container: document.getElementById('animation-container'), // Animasyonun gösterileceği konteyner
        renderer: 'svg',
        loop: true,
        autoplay: true,
        path: '/Template/Animation.json' // Animasyon dosyasının yolu
    });
</script>
