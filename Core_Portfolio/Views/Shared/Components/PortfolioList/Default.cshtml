
 
@using EntityLayer.Concrete
@model List<Portfolio>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<div class="section px-2 px-lg-4 pt-5" id="portfolio">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="marker marker-center">Projelerim</h2>
        </div>
        <div class="portfolio-grid" data-aos="zoom-in-up" data-aos-delay="100">
            @foreach (var item in Model)
            {
                <div class="project-card">
                    <a href="@item.ProjectUrl">
                        <figure class="portfolio-item">
                            <img src="@item.ImageUrl" style="width: 100%; height: 200px; border-radius: 15px;" data-bp="@item.ImageUrl2" />
                            <figcaption>
                                <h4 class="h5 mb-0">@item.Name</h4>
                                <div>Github Linki</div>
                            </figcaption>
                        </figure>
                    </a>
                    <div class="project-description">
                        <h5>@item.Name</h5>
                     
                        <div class="tech-stack">
                            
                            <span class="tech-tag">SQL-MVC.ASP.NET</span>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Statistics Section -->
<div class="section px-2 px-lg-4 py-4" id="statistics">
    <div class="container">
        <div class="stats-grid">
            <div class="stats-card" data-aos="flip-left" data-aos-delay="100">
                <div class="stats-icon">
                    <i class="fas fa-project-diagram"></i>
                </div>
                <div class="stats-number">5+</div>
                <div class="stats-label">Projeler</div>
            </div>

            <div class="stats-card" data-aos="flip-left" data-aos-delay="200">
                <div class="stats-icon">
                    <i class="fas fa-award"></i>
                </div>
                <div class="stats-number">15+</div>
                <div class="stats-label">Sertifikalar</div>
            </div>

            <div class="stats-card" data-aos="flip-left" data-aos-delay="300">
                <div class="stats-icon">
                    <i class="fas fa-code"></i>
                </div>
                <div class="stats-number">10+</div>
                <div class="stats-label">Teknolojiler</div>
            </div>

            <div class="stats-card" data-aos="flip-left" data-aos-delay="400">
                <div class="stats-icon">
                    <i class="fas fa-clock"></i>
                </div>
                <div class="stats-number">2 Yıl</div>
                <div class="stats-label">Deneyim</div>
            </div>
        </div>
    </div>
</div>

<style>
    .portfolio-grid {
        display: grid !important;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)) !important;
        gap: 0 !important; /* Boşluğu tamamen kaldırdık */
        padding: 0 !important;
        margin: 0 -0.125rem !important; /* Negative margin to pull cards closer */
    }

    .project-card {
        background: #4c4855;
        border-radius: 15px;
        overflow: hidden;
        transition: all 0.3s ease;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        margin: 0.125rem !important; /* Minimum margin for separation */
        max-width: 320px; /* Kartların maksimum genişliğini azalttık */
        width: 100%;
        justify-self: center;
    }

        .project-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
            z-index: 1; /* Hover durumunda kartın üstte görünmesini sağlar */
        }

    .portfolio-item {
        margin: 0 !important;
        padding: 0 !important;
    }

        .portfolio-item img {
            display: block;
            width: 100%;
            height: 200px !important;
            object-fit: cover !important;
            margin: 0 !important;
            padding: 0 !important;
        }

    .project-description {
        padding: 1.5rem;
        background: rgba(76, 72, 85, 0.95);
        color: white;
        border-top: 2px solid rgba(255, 223, 0, 0.3);
    }

        .project-description h5 {
            color: white;
            margin-bottom: 0.75rem;
            font-size: 1.1rem;
        }

        .project-description p {
            font-size: 0.9rem;
            line-height: 1.5;
            margin-bottom: 1rem;
            color: #e0e0e0;
        }

    .tech-stack {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .tech-tag {
        background: rgba(255, 184, 0, 0.2);
        color: #FFB800;
        padding: 0.25rem 0.75rem;
        border-radius: 15px;
        font-size: 0.8rem;
        border: 1px solid rgba(255, 184, 0, 0.3);
        transition: all 0.3s ease;
    }

        .tech-tag:hover {
            background: rgba(255, 184, 0, 0.3);
            transform: scale(1.05);
        }

    /* Statistics Styles */
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 1.25rem;
        padding: 0.75rem;
        margin-top: -2rem;
    }

    .stats-card {
        width: 250px;
        background: #4c4855;
        padding: 1rem 0.75rem;
        border-radius: 0.75rem;
        text-align: center;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        border: 1px solid rgba(0, 0, 0, 0.8);
        box-shadow: 0 0 8px rgba(255, 223, 0, 0.3), 0 0 16px rgba(255, 223, 0, 0.2), inset 0 0 8px rgba(255, 223, 0, 0.1);
        cursor: pointer;
        overflow: hidden;
    }

        .stats-card:hover {
            transform: translateY(-5px) scale(1.02);
            box-shadow: 0 0 20px rgba(255, 223, 0, 0.5), 0 0 40px rgba(255, 223, 0, 0.3), inset 0 0 20px rgba(255, 223, 0, 0.2);
        }

    .stats-icon {
        font-size: 1.25rem;
        color: white;
        margin-bottom: 0.5rem;
    }

    .stats-number {
        font-size: 1.5rem;
        font-weight: 700;
        color: white;
        margin-bottom: 0.25rem;
    }

    .stats-card:hover .stats-number {
        color: #FFB800;
    }

    .stats-label {
        font-size: 1rem;
        color: white;
        font-weight: 500;
    }

    /* Responsive Design */
    @@media (max-width: 1200px) {
        .stats-grid {
            grid-template-columns: repeat(2, 1fr);
            justify-items: center;
        }
    }

    @@media (max-width: 768px) {
        .portfolio-grid {
            gap: 0.25rem !important;
        }

        .stats-card {
            width: 100%;
            max-width: 250px;
        }
    }

    @@media (max-width: 480px) {
        .stats-grid {
            gap: 0.75rem;
        }

        .stats-number {
            font-size: 1.25rem;
        }

        .stats-label {
            font-size: 0.8rem;
        }
    }
</style>